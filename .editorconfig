# Specify default file formatting styles in supporting editors: https://editorconfig.org/
# .editorconfig spec: https://editorconfig-specification.readthedocs.io
root = true

# Standard file settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# for yaml and json
[*.{yml,yaml,json}]
indent_size = 2

[*.sh]
indent_style = tab
